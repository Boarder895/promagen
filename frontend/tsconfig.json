{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "allowJs": false,
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "types": ["node"],
    "incremental": true,
    "esModuleInterop": true,
    "plugins": [{ "name": "next" }]
  },
  "include": ["src/**/*", ".next/types/**/*.ts"],
  "exclude": [
    "src/lib/books/**",
    "src/components/books/**",
    "src/app/docs/**",
    "backup-*",
    "src/providers/copypaste/**"
  ]
}


