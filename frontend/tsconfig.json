{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "es2022"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "noEmit": true,

    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "incremental": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    /* ðŸ‘‡ let TS accept .js and ignore JSDoc type checking in them */
    "allowJs": true,
    "checkJs": false,

    "types": ["node"],
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "global.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
