{
  "name": "promagen-frontend",
  "private": true,
  "version": "1.0.0",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:standalone": "cross-env NEXT_STANDALONE=true next build",
    "start": "next start",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --cache --cache-location .eslintcache --format stylish \"src/**/*.{ts,tsx,js,jsx}\"",
    "check": "pnpm lint && pnpm typecheck",
    "generate:emoji-icons": "ts-node scripts/generate-emoji-icons.ts",
    "verify": "pnpm run typecheck && eslint \"src/**/*.{ts,tsx,js,jsx}\" --max-warnings=0",
    "test": "jest",
    "test:ci": "cross-env CI=true jest --ci --runInBand"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx}": [
      "eslint --fix --cache --cache-location .eslintcache --format stylish"
    ]
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.552.0",
    "next": "^14.2.33",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.16",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.22",
    "@types/react": "^18.3.26",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "autoprefixer": "^10.4.21",
    "cross-env": "^7.0.3",
    "eslint": "8.57.0",
    "eslint-config-next": "14",
    "eslint-config-prettier": "9.1.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jsx-a11y": "6.8.0",
    "eslint-plugin-react": "7.34.1",
    "eslint-plugin-react-hooks": "4.6.0",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "lint-staged": "^15.2.9",
    "postcss": "^8.5.6",
    "prettier": "^3",
    "tailwindcss": "^4.1.16",
    "ts-node": "^10.9.2",
    "typescript": "5.4.5",
    "typescript-eslint": "^8.46.2"
  }
}
