{
  "name": "promagen-frontend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "next dev --port 3000",
    "build": "next build",
    "build:standalone": "cross-env NEXT_STANDALONE=true next build",
    "start": "next start --port 3000",
    "lint": "eslint . --cache --cache-location .eslintcache --format stylish",
    "lint:fix": "eslint . --cache --cache-location .eslintcache --format stylish --fix",
    "format": "prettier . --write",
    "format:check": "prettier . --check .",
    "typecheck": "tsc --noEmit",
    "check": "pnpm run lint && pnpm run typecheck",
    "verify": "pnpm run typecheck && eslint . --max-warnings=0",
    "test": "jest --config jest.config.cjs",
    "test:ci": "cross-env CI=true jest --config jest.config.cjs --ci --runInBand",
    "test:accept": "playwright test -c ./playwright.config.ts",
    "test:accept:base": "cross-env BASE_URL=http://localhost:3000 pnpm run test:accept",
    "playwright": "playwright test",
    "generate:emoji-icons": "ts-node scripts/generate-emoji-icons.ts",
    "api:config-report": "ts-node scripts/api-config-report.ts",
    "api:config-dashboard": "ts-node scripts/api-config-dashboard.ts",
    "api:schedule-plan": "ts-node scripts/fly-api-worker.ts",
    "api-config-report": "pnpm run api:config-report",
    "api-config-dashboard": "pnpm run api-config-dashboard",
    "api-schedule-plan": "pnpm run api:schedule-plan",
    "api:doctor": "jest --config jest.config.cjs src/lib/api/tests",
    "test:lh": "node ./scripts/run-lighthouse.cjs",
    "test:accept:all": "pnpm run test:accept && pnpm run test:lh",
    "verify:tests": "pwsh -File ./scripts/verify-test-layout.ps1",
    "pretest:ci": "pwsh -File ./scripts/verify-test-layout.ps1",
    "validate:data": "jest --config jest.config.cjs src/data/commodities/tests",
    "check:all": "pnpm run lint && pnpm run typecheck && pnpm api:build-catalogues && pnpm api:config-report && pnpm api:doctor && pnpm run test:ci",
    "api:split-providers": "ts-node scripts/api-split-providers.ts",
    "api:build-catalogues": "ts-node scripts/api-build-catalogues.ts"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,cjs,mjs}": [
      "eslint --fix --cache --cache-location .eslintcache --format stylish"
    ],
    "*.{json,md,mdx,css,scss,html,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.552.0",
    "next": "14",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^3.4.0",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.0",
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@eslint/js": "^9",
    "@jest/globals": "^30.2.0",
    "@lhci/cli": "^0.14.0",
    "@next/eslint-plugin-next": "^16.0.1",
    "@playwright/test": "^1.48.2",
    "@swc/jest": "^0.2.39",
    "@tailwindcss/postcss": "^4.1.16",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/jest-axe": "^3.5.9",
    "@types/node": "^22.7.5",
    "@types/react": "^18.3.26",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "autoprefixer": "^10.4.21",
    "babel-jest": "^30.2.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "chrome-launcher": "^1.2.1",
    "cross-env": "^7.0.3",
    "eslint": "^9",
    "eslint-config-next": "14",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.37.1",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-tailwindcss": "^3.18.2",
    "globals": "^15",
    "identity-obj-proxy": "^3.0.0",
    "jest": "29.7.0",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "29.7.0",
    "lighthouse": "^12.8.2",
    "lint-staged": "^15.2.9",
    "next-sitemap": "4.2.3",
    "postcss": "^8.5.6",
    "prettier": "^3.3.3",
    "tailwindcss": "^4.0.0",
    "ts-jest": "29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "5.6.3",
    "typescript-eslint": "^8",
    "undici": "^7.16.0"
  },
  "browserslist": [
    "defaults",
    "not ie <= 11",
    "not op_mini all"
  ]
}
