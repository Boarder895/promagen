{
  "name": "promagen-frontend",
  "private": true,
  "version": "0.1.0",

  "engines": { "node": "20.x" },

  "scripts": {
    "dev": "next dev -p 3000",
    "prebuild": "node scripts/prebuild.cjs",
    "build": "next build",
    "start": "next start -p 3000",

    "lint": "eslint . --ext .ts,.tsx --max-warnings=0",
    "lint:guard": "eslint \"src/**/*.{ts,tsx}\" --max-warnings=0",

    /* ===== local / optional helpers (safe for Vercel because they are NOT called on CI) ===== */
    "clean": "pwsh -NoProfile -File scripts/clean.ps1",
    "clean:hard": "pwsh -NoProfile -File scripts/clean.ps1 -Hard",
    "check:app-structure": "pwsh -NoProfile -File scripts/check-app-structure.ps1",
    "books:clean": "pwsh ./scripts/books-cleanup.ps1",
    "rebuild": "npm run clean:hard && npm ci && npm run build",
    "rebuild:clean": "npm run clean && npm run build",
    "books:touch": "node -e \"console.log('Books dir ok')\"",

    /* Avoid CI noise when .git isn’t present */
    "prepare": "husky install || echo \"skip husky\""
  },

  "dependencies": {
    "@headlessui/react": "^2.2.2",
    "@heroicons/react": "^2.1.5",
    "@microsoft/fetch-event-source": "^2.0.1",
    "@radix-ui/react-slot": "^1.0.2",
    "@tanstack/react-query": "^5.51.25",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "fuse.js": "^6.6.2",
    "intl-segmenter-polyfill": "^0.4.4",
    "lucide-react": "^0.453.0",
    "luxon": "^3.7.2",
    "next": "14.2.13",
    "next-themes": "^0.4.3",
    "openai": "^4.69.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^2.13.7",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-raw": "^7.0.0",
    "rehype-sanitize": "^6.0.0",
    "rehype-slug": "^6.0.0",
    "rehype-stringify": "^10.0.1",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "server-only": "^0.0.1",
    "swr": "^2.2.5",
    "tailwind-merge": "^2.5.2",
    "tailwindcss-animate": "^1.0.7",
    "unified": "^11.0.5",
    "zod": "^3.23.8"
  },

  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@next/eslint-plugin-next": "^15.5.4",
    "@rushstack/eslint-patch": "^1.13.0",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/node": "^22.7.5",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/parser": "^8.45.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.37.0",
    "eslint-config-next": "^15.5.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react-hooks": "^6.1.1",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "tailwindcss": "^3.4.12",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.45.0"
  }
}



