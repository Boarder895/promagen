{
  "$schema": "https://json.schemastore.org/lighthouserc.json",
  "ci": {
    "collect": {
      "url": [
        "http://localhost:3000/",
        "http://localhost:3000/admin/exchanges"
      ],
      "numberOfRuns": 1,
      "settings": {
        "preset": "desktop",
        "locale": "en-GB",
        "budgetsPath": "lighthouse-budgets.json"
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": ["error", { "minScore": 0.90 }],
        "categories:accessibility": ["error", { "minScore": 1.00 }],
        "categories:seo": ["error", { "minScore": 0.95 }],
        "categories:best-practices": ["error", { "minScore": 0.95 }],
        "server-response-time": ["warn", { "maxNumericValue": 800 }],
        "unused-javascript": ["warn", { "maxNumericValue": 200000 }],
        "total-byte-weight": ["warn", { "maxNumericValue": 1800000 }],
        "legacy-javascript": "warn",
        "uses-rel-preconnect": "warn",
        "uses-text-compression": "warn",
        "uses-responsive-images": "warn"
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  },
  "mobile": {
    "collect": {
      "url": [
        "http://localhost:3000/",
        "http://localhost:3000/admin/exchanges"
      ],
      "numberOfRuns": 1,
      "settings": {
        "preset": "mobile",
        "locale": "en-GB",
        "budgetsPath": "lighthouse-budgets.mobile.json"
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": ["error", { "minScore": 0.90 }],
        "categories:accessibility": ["error", { "minScore": 1.00 }],
        "categories:seo": ["error", { "minScore": 0.95 }],
        "categories:best-practices": ["error", { "minScore": 0.95 }]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
