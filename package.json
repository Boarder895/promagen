{
  "name": "promagen",
  "private": true,
  "version": "1.0.0",
  "description": "Promagen monorepo (root)",
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "pnpm@10.12.0",
  "scripts": {
    "//": "No recursive postinstall. Use workspace scripts manually.",
    "install:all": "pnpm -w install",
    "clean": "pnpm -r run clean || exit 0",
    "lint": "pnpm -r run lint",
    "typecheck": "pnpm -r run typecheck",
    "build": "pnpm -r run build",
    "test": "pnpm -r run test",
    "test:ci": "pnpm -r run test:ci"
  }
}
