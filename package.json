{
  "name": "promagen",
  "private": true,
  "version": "1.0.0",
  "description": "Promagen monorepo (root)",
  "packageManager": "pnpm@10.12.0",
  "engines": {
    "node": ">=22.0.0"
  },
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "//": "Root forwards to the frontend workspace. No Next.js app lives at the root.",
    "install:all": "pnpm -w install",
    "clean": "pnpm -C frontend run clean || exit 0",
    "dev": "pnpm -C frontend dev",
    "build": "pnpm -C frontend build",
    "start": "pnpm -C frontend start",
    "lint": "pnpm -C frontend lint",
    "typecheck": "pnpm -C frontend typecheck",
    "test": "pnpm -C frontend test",
    "test:ci": "pnpm -C frontend test:ci"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@playwright/test": "^1.56.1",
    "cheerio": "^1.1.2",
    "lighthouse-ci": "^1.13.1"
  }
}
