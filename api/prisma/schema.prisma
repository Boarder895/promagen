datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Prompt {
  id        Int      @id @default(autoincrement())
  title     String   @unique          // short human-readable name
  text      String                      // the actual prompt text
  tagsJson  Json                        // JSON array of strings e.g. ["neon","map"]
  likes     Int      @default(0)
  remixes   Int      @default(0)
  provider  String?
  author    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}




